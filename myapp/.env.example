# myapp/.env.example
# Application Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Required Settings
# ============================================================================
MYAPP_REQUIRED_VAR=your_value_here
MYAPP_SETTING=default_value

# ============================================================================
# Optional Settings
# ============================================================================
# Log directory (optional, defaults to /tmp/myapp)
MYAPP_LOG_DIR=/tmp/myapp

# Feature Flags
MYAPP_FEATURE_BETA=false
MYAPP_FEATURE_DEBUG=false

# ============================================================================
# External Service Configuration (if needed)
# ============================================================================
# API Keys
# MYAPP_API_KEY=your_api_key_here
# MYAPP_API_SECRET=your_api_secret_here

# Database (if needed)
# MYAPP_DB_HOST=localhost
# MYAPP_DB_PORT=5432
# MYAPP_DB_NAME=myapp
# MYAPP_DB_USER=myapp_user
# MYAPP_DB_PASSWORD=your_password

# ============================================================================
# Development Settings
# ============================================================================
# Set to true for verbose logging
MYAPP_DEBUG=false